---
import TourCard from "./TourCard.astro";

const { tours = [] } = Astro.props;
---

<section class="container mx-auto px-4 py-12 md:py-16">
    <div class="text-center mb-12">
        <h2
            class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 dark:text-white mb-4"
        >
            Our Amazing Tours
        </h2>
        <p class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
            Discover the beauty of Side with our exciting jeep safari adventures
        </p>
    </div>

    {
        tours.length > 0 ? (
            <div
                class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-8"
                id="tour-listing"
            >
                {tours.map((tour: any) => (
                    <TourCard {...tour} />
                ))}
            </div>
        ) : (
            <div class="text-center py-12">
                <p class="text-gray-600 dark:text-gray-400 text-lg">
                    No tours available at the moment. Please check back later.
                </p>
            </div>
        )
    }
</section>
