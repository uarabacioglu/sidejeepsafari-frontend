---
const {
    tour_id,
    title,
    slug,
    short_description,
    thumbnail,
    min_adult_price,
    review_count,
    average_rating,
} = Astro.props;
---

<a
    href={`/tours/${slug}`}
    class="group block bg-white dark:bg-gray-800 rounded-xl shadow-md hover:shadow-xl transition-all duration-300 overflow-hidden border border-gray-200 dark:border-gray-700"
>
    <!-- Image -->
    <div
        class="relative h-76 md:h-80 overflow-hidden bg-gray-200 dark:bg-gray-700"
    >
        {
            thumbnail?.image ? (
                <img
                    src={thumbnail.image}
                    alt={thumbnail.alt_text || title}
                    width="400"
                    height="300"
                    class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300"
                    loading="lazy"
                    decoding="async"
                    fetchpriority="low"
                />
            ) : (
                <div class="w-full h-full flex items-center justify-center bg-gradient-to-br from-orange-400 to-red-500">
                    <svg
                        class="w-16 h-16 text-white opacity-50"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"
                        />
                    </svg>
                </div>
            )
        }
        <!-- Price Badge -->
        <div
            class="absolute top-4 right-4 bg-orange-500 text-white px-3 py-1.5 rounded-full font-bold text-sm shadow-lg"
        >
            â‚¬{min_adult_price}
        </div>
    </div>

    <!-- Content -->
    <div class="p-5 md:p-6">
        <h3
            class="text-xl md:text-2xl font-bold text-gray-900 dark:text-white mb-2 group-hover:text-orange-600 dark:group-hover:text-orange-400 transition-colors line-clamp-2"
        >
            {title}
        </h3>
        <p
            class="text-gray-600 dark:text-gray-400 text-sm md:text-base mb-4 line-clamp-3"
        >
            {short_description}
        </p>

        <!-- Rating and Reviews -->
        <div
            class="flex items-center justify-between pt-4 border-t border-gray-200 dark:border-gray-700"
        >
            <div class="flex items-center space-x-2">
                <div class="flex items-center">
                    <svg
                        class="w-5 h-5 text-yellow-400"
                        fill="currentColor"
                        viewBox="0 0 20 20"
                    >
                        <path
                            d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
                        ></path>
                    </svg>
                    <span
                        class="ml-1 text-sm font-semibold text-gray-900 dark:text-white"
                    >
                        {parseFloat(average_rating).toFixed(1)}
                    </span>
                </div>
                <span class="text-sm text-gray-500 dark:text-gray-400">
                    ({review_count}
                    {review_count === "1" ? "review" : "reviews"})
                </span>
            </div>
            <span
                class="text-orange-600 dark:text-orange-400 font-semibold text-sm group-hover:translate-x-1 transition-transform inline-flex items-center"
            >
                View Details
                <svg
                    class="w-4 h-4 ml-1"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M9 5l7 7-7 7"></path>
                </svg>
            </span>
        </div>
    </div>
</a>
