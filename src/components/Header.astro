---
const {
	title = "Welcome to Side Jeep Safari",
	subtitle = "Experience the adventure of a lifetime",
	backgroundImage,
} = Astro.props;
---

<header
	class="relative w-full bg-gradient-to-br from-orange-500 via-red-500 to-orange-600 dark:from-orange-600 dark:via-red-600 dark:to-orange-700 text-white overflow-hidden"
>
	<!-- Background Pattern -->
	<div
		class="absolute inset-0 opacity-10 dark:opacity-5"
		style="background-image: url('data:image/svg+xml,%3Csvg width=\'60\' height=\'60\' viewBox=\'0 0 60 60\' xmlns=\'http://www.w3.org/2000/svg\'%3E%3Cg fill=\'none\' fill-rule=\'evenodd\'%3E%3Cg fill=\'%23ffffff\' fill-opacity=\'1\'%3E%3Cpath d=\'M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z\'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"
	>
	</div>

	<!-- Optional Background Image Overlay -->
	{
		backgroundImage && (
			<div
				class="absolute inset-0 bg-cover bg-center opacity-20 dark:opacity-10"
				style={`background-image: url('${backgroundImage}')`}
			/>
		)
	}

	<!-- Content -->
	<div class="relative container mx-auto px-4 py-16 md:py-24 lg:py-32">
		<div class="max-w-3xl mx-auto text-center">
			<h1
				class="text-4xl md:text-5xl lg:text-6xl font-bold mb-4 md:mb-6 leading-tight drop-shadow-lg"
			>
				{title}
			</h1>
			{
				subtitle && (
					<p class="text-lg md:text-xl lg:text-2xl mb-8 md:mb-12 text-orange-50 dark:text-orange-100 drop-shadow-md">
						{subtitle}
					</p>
				)
			}
		</div>
	</div>

	<!-- Decorative Wave -->
	<div class="absolute bottom-0 left-0 right-0">
		<svg
			class="w-full h-12 md:h-16 lg:h-20 fill-white dark:fill-gray-900"
			viewBox="0 0 1200 120"
			preserveAspectRatio="none"
		>
			<path
				d="M0,0 C150,100 350,0 600,50 C850,100 1050,0 1200,50 L1200,120 L0,120 Z"
			></path>
		</svg>
	</div>
</header>
